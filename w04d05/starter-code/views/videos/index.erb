<h1 class="heading">Welcome to ZiTube</h1>


<!-- within the each loop, using bootstrap cards -->
<% @videos.each do |video| %>
	<main>
		<div class="container-fluid cards">
			<div class="row">
				<div class="col-md-4 col-centered">
					<section class="aboutCard">
						<div class="card cards">
			  			<div class="card-body">
			    			<h4 class="card-title heading"><a href="/<%= video.id %>"><%= video.title %></a></h4>
			    			<p class="card-text"><%= video.url %></p>
			  			</div>
			  		</div>
			  	</section>
				</div>
			</div>
		</div>
	</main>
<% end %>