<!-- the form  -->
<form action="/<%= @video.id %>" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @video.title %>">
  </div>

  <div>
    <label>Description</label>
    <input type="text" name="description" placeholder="Enter a description" value="<%= @video.description %>">
  </div>

  <div>
    <label>URL</label>
    <input type="text" name="url" placeholder="Enter a url" value="<%= @video.url %>">
  </div>

  <button class="show">Save Post</button>
  
  <% if(@video.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>