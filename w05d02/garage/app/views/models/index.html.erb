<p id="notice"><%= notice %></p>

<h1>Welcome to the car models homepage</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Engine Size</th>
      <th>How many have been sold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= model.engine_size %></td>
        <td><%= model.sold %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_model_path(model) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new car model', new_model_path %>