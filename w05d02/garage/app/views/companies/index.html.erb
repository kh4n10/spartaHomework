<p id="notice"><%= notice %></p>

<h1>Welcome to the selection of car companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Established</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.established %></td>
        <td><%= company.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>